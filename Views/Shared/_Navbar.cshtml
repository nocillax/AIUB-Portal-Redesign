@{
    var userRole = Session["UserRole"]?.ToString();
    var userName = Session["UserName"]?.ToString();
}

@* Shared Navbar *@
<nav class="navbar">
    <div class="navbar-left">
        
        <div class="university-logo">
            <img src="~/Content/images/aiub-seeklogo.svg" width="47" height="47"/>
            <div class="logo-text">
                <div class="logo-line1">AIUB</div>
                <div class="logo-line2">PORTAL</div>
            </div>
        </div>
        @if (userRole == "Student")
        {
            <div class="navbar-nav">
                <a href="#" class="nav-item">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z" />
                    </svg>
                    Course & Results
                </a>
                <a href="#" class="nav-item">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 2 2h8c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" />
                    </svg>
                    Notes
                </a>
                <a href="#" class="nav-item">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                    </svg>
                    Notice
                </a>
            </div>
        }

    </div>
    <div class="navbar-right">
        <button class="notification-btn">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z" />
            </svg>
            <span class="notification-badge"></span>
        </button>

        <div class="user-profile" onclick="toggleDropdown()">
            <div class="user-avatar">S</div>
            <span class="user-name">@userName</span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M7 10l5 5 5-5z" />
            </svg>
            <div class="dropdown-menu" id="userDropdown">
                <a href="#" class="dropdown-item">Manage My Account</a>
                <a href="#" class="dropdown-item">Settings</a>
                <a href="@Url.Action("Logout", "Account")" class="dropdown-item">Logout</a>
            </div>
        </div>
    </div>
</nav>
