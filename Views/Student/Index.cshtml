@{
    ViewBag.Title = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userName = Session["UserName"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Dashboard - AIUB Portal</title>
    <link rel="stylesheet" href="~/Content/css/dash.css" />
</head>
    

<body>

    <!-- Main Content -->
    <main class="main-content" id="mainContent">
        <div class="dashboard-header">
            <h1 class="dashboard-title">Welcome back, @userName!</h1>
            <p class="dashboard-subtitle">
                Here's what's happening with your studies today
            </p>
        </div>

        <!-- Summary Cards -->
        <div class="summary-cards">
            <div class="summary-card">
                <div class="card-header">
                    <div class="card-icon blue">
                        <svg fill="currentColor" height="24" viewBox="0 0 24 24" width="24">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                        </svg>
                    </div>
                    <div class="card-title">Today's Classes</div>
                </div>
                <div class="card-value">5</div>
                <div class="card-subtitle">Next: Mathematics at 9:00 AM</div>
            </div>

            <div class="summary-card">
                <div class="card-header">
                    <div class="card-icon green">
                        <svg fill="currentColor" height="24" viewBox="0 0 24 24" width="24">
                            <path d="M19 3h-4.18C14.4 1.84 13.3 1 12 1c-1.3 0-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm2 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"></path>
                        </svg>
                    </div>
                    <div class="card-title">Upcoming Events</div>
                </div>
                <div class="card-value">4</div>
                <div class="card-subtitle">2 Quizzes, 1 Assignment Due</div>
            </div>

            <div class="summary-card">
                <div class="card-header">
                    <div class="card-icon yellow">
                        <svg fill="currentColor" height="24" viewBox="0 0 24 24" width="24">
                            <path d="M9 11H7v6h2v-6zm4 0h-2v6h2v-6zm4 0h-2v6h2v-6zm2.5-9H18V1h-2v1H8V1H6v1H4.5C3.67 2 3 2.67 3 3.5v15C3 19.33 3.67 20 4.5 20h15c.83 0 1.5-.67 1.5-1.5v-15C21 2.67 20.33 2 19.5 2z"></path>
                        </svg>
                    </div>
                    <div class="card-title">Registered Credits</div>
                </div>
                <div class="card-value">18</div>
                <div class="card-subtitle">Spring 2024-2025</div>
            </div>

            <div class="summary-card">
                <div class="card-header">
                    <div class="card-icon purple">
                        <svg fill="currentColor" height="24" viewBox="0 0 24 24" width="24">
                            <path d="M3.5 18.49l6-6.01 4 4L22 6.92l-1.41-1.41-7.09 7.97-4-4L2 16.99z"></path>
                        </svg>
                    </div>
                    <div class="card-title">Current CGPA</div>
                </div>
                <div class="card-value">3.75</div>
                <div class="card-subtitle">Excellent Performance</div>
            </div>

            <div class="summary-card">
                <div class="card-header">
                    <div class="card-icon light-blue">
                        <svg fill="currentColor" height="24" viewBox="0 0 24 24" width="24">
                            <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"></path>
                        </svg>
                    </div>
                    <div class="card-title">Notifications</div>
                </div>
                <div class="card-value">3</div>
                <div class="card-subtitle">2 Unread Messages</div>
            </div>

        </div>

        <!-- Dashboard Content -->
        <div class="dashboard-content">
            <!-- Calendar -->
            <div class="calendar-container">
                <div class="calendar-header">
                    <h2 class="calendar-title">Weekly Schedule</h2>
                    <div class="week-selector">
                        <button class="week-nav">
                            <svg fill="currentColor" height="18" viewBox="0 0 24 24" width="18">
                                <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"></path>
                            </svg>
                        </button>
                        <span style="font-size: 14px; color: #6c757d; font-weight: 600">March 17-23, 2024</span>
                        <button class="week-nav">
                            <svg fill="currentColor" height="18" viewBox="0 0 24 24" width="18">
                                <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"></path>
                            </svg>
                        </button>
                    </div>
                </div>
                <div class="calendar-grid">
                    <div class="time-column">
                        <div class="time-slot" style="height: 60px"></div>
                        <div class="time-slot">8:00</div>
                        <div class="time-slot">9:00</div>
                        <div class="time-slot">10:00</div>
                        <div class="time-slot">11:00</div>
                        <div class="time-slot">12:00</div>
                        <div class="time-slot">1:00</div>
                        <div class="time-slot">2:00</div>
                        <div class="time-slot">3:00</div>
                        <div class="time-slot">4:00</div>
                        <div class="time-slot">5:00</div>
                        <div class="time-slot">6:00</div>
                        <div class="time-slot">7:00</div>
                        <div class="time-slot">8:00</div>
                        <div class="time-slot">9:00</div>
                    </div>
                    <!-- Sunday -->
                    <div class="day-column">
                        <div class="day-header">
                            <div class="day-name">Sunday</div>
                            <div class="day-date">Mar 17</div>
                        </div>
                        <div class="day-content">
                            <!-- Empty day -->
                        </div>
                    </div>
                    <!-- Monday -->
                    <div class="day-column">
                        <div class="day-header">
                            <div class="day-name">Monday</div>
                            <div class="day-date">Mar 18</div>
                        </div>
                        <div class="day-content">
                            <div class="class-card math" style="top: 60px; height: 90px">
                                <div class="class-title">Math-4</div>
                                <div class="class-details">
                                    9:00-10:30 AM • Room 1105<br />DR. JASHIM UDDIN
                                </div>
                            </div>
                            <div class="class-card physics" style="top: 180px; height: 180px">
                                <div class="class-title">Physics</div>
                                <div class="class-details">
                                    11:00 AM-2:00 PM • Room DN0202<br />DR. REZAUL K. SIDDIQUE
                                </div>
                            </div>
                            <div class="class-card programming" style="top: 420px; height: 90px">
                                <div class="class-title">ATP2</div>
                                <div class="class-details">
                                    4:00-5:30 PM • CS Lab<br />MD. HASIBUL HASAN
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Tuesday -->
                    <div class="day-column">
                        <div class="day-header">
                            <div class="day-name">Tuesday</div>
                            <div class="day-date">Mar 19</div>
                        </div>
                        <div class="day-content">
                            <div class="class-card chemistry" style="top: 120px; height: 90px">
                                <div class="class-title">Chemistry</div>
                                <div class="class-details">
                                    10:00-11:30 AM • Room 2102<br />SHAHRIAR ATIK FAHIM
                                </div>
                            </div>
                            <div class="class-card english" style="top: 240px; height: 90px">
                                <div class="class-title">English-1</div>
                                <div class="class-details">
                                    1:00-2:30 PM • Room 1101<br />ASHIKA BARI JOTEE
                                </div>
                            </div>
                            <div class="class-card math" style="top: 360px; height: 90px">
                                <div class="class-title">Math-4</div>
                                <div class="class-details">
                                    3:00-4:30 PM • Room 1105<br />DR. JASHIM UDDIN
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Wednesday -->
                    <div class="day-column">
                        <div class="day-header">
                            <div class="day-name">Wednesday</div>
                            <div class="day-date">Mar 20</div>
                        </div>
                        <div class="day-content">
                            <div class="class-card math" style="top: 60px; height: 90px">
                                <div class="class-title">Math-4</div>
                                <div class="class-details">
                                    9:00-10:30 AM • Room 1105<br />DR. JASHIM UDDIN
                                </div>
                            </div>
                            <div class="class-card physics" style="top: 180px; height: 180px">
                                <div class="class-title">Physics</div>
                                <div class="class-details">
                                    11:00 AM-2:00 PM • Room DN0202<br />DR. REZAUL K. SIDDIQUE
                                </div>
                            </div>
                            <div class="class-card programming" style="top: 420px; height: 90px">
                                <div class="class-title">ATP2</div>
                                <div class="class-details">
                                    4:00-5:30 PM • CS Lab<br />MD. HASIBUL HASAN
                                </div>
                            </div>
                            <div class="current-time-line" style="top: 150px"></div>
                        </div>
                    </div>
                    <!-- Thursday -->
                    <div class="day-column">
                        <div class="day-header">
                            <div class="day-name">Thursday</div>
                            <div class="day-date">Mar 21</div>
                        </div>
                        <div class="day-content">
                            <div class="class-card chemistry" style="top: 120px; height: 90px">
                                <div class="class-title">Chemistry</div>
                                <div class="class-details">
                                    10:00-11:30 AM • Room 2102<br />SHAHRIAR ATIK FAHIM
                                </div>
                            </div>
                            <div class="class-card english" style="top: 240px; height: 90px">
                                <div class="class-title">English-1</div>
                                <div class="class-details">
                                    1:00-2:30 PM • Room 1101<br />ASHIKA BARI JOTEE
                                </div>
                            </div>
                            <div class="class-card math" style="top: 360px; height: 90px">
                                <div class="class-title">Math-4</div>
                                <div class="class-details">
                                    3:00-4:30 PM • Room 1105<br />DR. JASHIM UDDIN
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Friday -->
                    <div class="day-column">
                        <div class="day-header">
                            <div class="day-name">Friday</div>
                            <div class="day-date">Mar 22</div>
                        </div>
                        <div class="day-content">
                            <!-- Empty day -->
                        </div>
                    </div>
                    <!-- Saturday -->
                    <div class="day-column">
                        <div class="day-header">
                            <div class="day-name">Saturday</div>
                            <div class="day-date">Mar 23</div>
                        </div>
                        <div class="day-content">
                            <!-- Empty day -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- Right Column -->
            <div>
                <!-- To-Do Section -->
                <div class="todo-container">
                    <div class="todo-header">
                        <h3 class="todo-title">Today's Reminders</h3>
                        <button class="add-todo-btn" onclick="addTodoItem()">
                            <svg fill="currentColor" height="16" viewBox="0 0 24 24" width="16">
                                <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="todo-list" id="todoList">
                        <div class="todo-item">
                            <div class="todo-icon quiz">📝</div>
                            <div class="todo-content">
                                <div class="todo-task">Math-4 Quiz</div>
                                <div class="todo-time">Today at 3:00 PM</div>
                            </div>
                        </div>
                        <div class="todo-item">
                            <div class="todo-icon assignment">📚</div>
                            <div class="todo-content">
                                <div class="todo-task">Physics Assignment</div>
                                <div class="todo-time">Due Tomorrow</div>
                            </div>
                        </div>
                        <div class="todo-item">
                            <div class="todo-icon exam">🎯</div>
                            <div class="todo-content">
                                <div class="todo-task">Chemistry Midterm</div>
                                <div class="todo-time">Friday at 10:00 AM</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

</body>

</html>
